<h1 class="text-center mt-5 mb-5" >Index</h1>



<div class="container mb-5">

<div class="btn btn-primary mb-5">
  <%= link_to 'Create a new restaurant', new_restaurant_path, class: "text-decoration-none text-light"%>
</div>

  <ul>
    <% @restaurants.each do |restaurant| %>
    <div class="mb-3 bg-light p-2 border border-secondary rounded">
      <li> <%= link_to restaurant.name, restaurant_path(restaurant) %> ||
      <%= restaurant.address %> || tel: <%= restaurant.phone_number %> </li>
    </div>
    <% end %>
  </ul>

</div>
